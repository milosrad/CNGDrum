<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/navigation_background">
    <TextView android:id="@+id/textViewnavigationtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_description_color"
        android:textSize="18dp"
        android:layout_margin="10dp"
        android:text="Navigation"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/navigation_divider"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>